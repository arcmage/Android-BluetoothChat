<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/gradient_layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/welcomeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#8c413e"
        android:id="@+id/textView"
        android:text="Welcome to our project!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/welcomeImage"
        android:layout_alignEnd="@+id/welcomeImage" />
    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/welcomeImage"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/contButton"
        android:layout_below="@+id/textView" />

    <Button
        android:background="@drawable/gradient_img_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/contButton"
        android:layout_alignRight="@+id/welcomeImage"
        android:layout_alignParentBottom="true"
        android:textColor="#643c33"
        android:textStyle="bold"
        android:text="Start"/>

</RelativeLayout>
